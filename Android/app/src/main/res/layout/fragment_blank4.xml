<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshMain1"
        android:background="@color/gray_400"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_400"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:clickable="true"
            android:background="@drawable/ripple_with_selector3">

            <com.example.myapplication.custom_view.ImageVIewCircle
                android:id="@+id/individual"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"></com.example.myapplication.custom_view.ImageVIewCircle>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="60dp"
                    android:text="点击 登陆/注册"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/line1View"
            android:layout_below="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_400"
            ></View>

        <LinearLayout
            android:layout_below="@id/line1View"
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#fff"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/ripple_with_selector3"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/mys"
                    android:layout_gravity="center"
                    android:layout_marginRight="2sp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:text="我的"
                    android:textSize="16sp"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/ripple_with_selector3"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/shoucang"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:text="商品收藏"
                    android:textSize="16sp"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/ripple_with_selector3"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/love"
                    android:layout_gravity="center"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:text="关注商品"
                    android:textSize="16sp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/ripple_with_selector3"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/history"
                    android:layout_gravity="center"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:text="浏览足迹"
                    android:textSize="16sp"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>
